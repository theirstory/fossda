{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts", "../src/**/*.ts", "../src/**/*.json"],
  "exclude": ["node_modules"]
} 